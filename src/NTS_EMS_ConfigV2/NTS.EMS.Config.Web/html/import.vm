		<script>
		$(function(){
					$("#AddDate,#Times").hide();
					$("#Year,#Month").show();
				    $("#Year").val($CuttureDate.Year);
                    $("#Month").val($CuttureDate.Month);
					$("#Times").val($CuttureDate.Hour);
			$("#DateUnit").change(function()
			{
				switch(Number($(this).val()))
				{
					case 1:
					  $("#AddDate,#Times").hide();
					  $("#Year,#Month").show();
					break;
					case 2:
					  $("#Year,#Month,#Times").hide();
					  $("#AddDate").show();
					break;
					default:
					  $("#AddDate,#Times").show();
					  $("#Year,#Month").hide();
					break;
				}
			});
		});
		</script>

